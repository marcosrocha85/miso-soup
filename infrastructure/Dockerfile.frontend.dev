FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY frontend/tsconfig.json frontend/next.config.mjs ./
COPY frontend/app ./app
COPY frontend/public ./public

# Expose port
EXPOSE 3001

# Start in development mode
CMD ["npm", "run", "dev"]
